#!python

Import('env', 'PREREQS')

libs = ['daos_sr', 'daos_m', 'daos_common', 'daos_transport',
	'daos_event', 'mpi', 'uuid', 'cmocka']

denv = env.Clone()

if PREREQS is not None:
    PREREQS.require(denv, 'ompi')

denv.Program('simple_array', 'simple_array.c', LIBS=[libs, 'daos_mgmt'])
denv.Program('daosbench', 'daosbench.c', LIBS=libs)

# tests
SConscript('suite/SConscript', exports = ['denv'])
