#!python

Import('env', 'PREREQS')

env.AppendUnique(LIBPATH=[Dir('.')])

libraries = ['daos_common', 'mercury', 'abt']

if PREREQS is None:
    libraries += ['na','mcl']
else:
    PREREQS.require(env, 'mercury', 'mcl', 'argobots')

denv = env.Clone()
denv.Append(CPPPATH = ['#/src/dtp'])

dtp = denv.SharedLibrary('libdaos_transport', Glob('*.c'), LIBS=libraries)
denv.Install('$PREFIX/lib/', dtp)

# Builders
SConscript('tests/SConscript', exports='denv')
