#!python

Import('denv')

libraries = ['libvos', 'libuuid', 'libpthread', 'libdaos_common',
	     'daos_transport', 'libpmemobj']

denv.Program('vos_pool_tests','vos_pool_tests.c', LIBS=libraries)
denv.Program('vos_container_tests','vos_container_tests.c', LIBS=libraries)
denv.Program('vos_chash_table_test','vos_chashtable_test.c', CCFLAGS='-fopenmp',
		     LIBS =[libraries, 'libgomp'])

vos_ctl_src=['common.c', 'vos_ctl.c']
denv.Program('vos_ctl', vos_ctl_src, LIBS=libraries)

denv.Program('vos_oi_tests','vos_oi_tests.c', LIBS=libraries)
denv.Program('vos_obj_cache_tests','vos_obj_cache_tests.c', LIBS=libraries)
