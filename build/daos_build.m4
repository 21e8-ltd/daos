AC_DEFUN([DAOS_PROG_CC],[
	DAOS_CFLAGS="-g -Wall -fPIC -D_GNU_SOURCE"
	AC_SUBST(DAOS_CFLAGS)

	DAOS_ASFLAGS="-Wall -fPIC -D_GNU_SOURCE"
	AC_SUBST(DAOS_ASFLAGS)
])

